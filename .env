# Configurações do Servidor
NODE_ENV=production
PORT=3000

# Configurações SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seuemail@gmail.com
SMTP_PASS=suasenhaapp

# E-mail do Administrador
ADMIN_EMAIL=admin@minhaempresa.com

# Configurações da Empresa
COMPANY_NAME=Minha Empresa
COMPANY_LOGO=https://via.placeholder.com/40x40/25D366/FFFFFF?text=ME

# Configurações do Chat
CHAT_TITLE=Atendimento Online
CHAT_SUBTITLE=Resposta rápida
CHAT_PLACEHOLDER=Digite sua mensagem...

# Cores do Chat
CHAT_COLOR_PRIMARY=#25D366
CHAT_COLOR_SECONDARY=#128C7E
CHAT_COLOR_TEXT=#FFFFFF
CHAT_COLOR_BACKGROUND=#F0F0F0

# Configurações de Segurança
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Session
SESSION_SECRET=sua-chave-secreta-muito-forte-aqui

# Configurações de Log
LOG_LEVEL=info
LOG_FILE_ERROR=logs/error.log
LOG_FILE_COMBINED=logs/combined.log

# Configurações de Cache (Redis - opcional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Configurações de Banco de Dados (opcional)
DATABASE_URL=postgresql://user:password@localhost:5432/chatbot
DATABASE_SSL=false

# Configurações de Monitoramento
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# Configurações de Deploy
DOMAIN=seudominio.com
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/certs/key.pem

# Configurações de Webhook (opcional)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Configurações de Analytics (opcional)
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=